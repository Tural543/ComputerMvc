@using ComputerStore.Class
@model List<Computer>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table">
    <thead>
        <tr>
           <th> 
               Name
           </th>
            <th>
                Marka
            </th>
            <th>
                Stock
            </th>
            <th>
                Salary
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var comp in Model)
            {
                <th>
                    @comp.Name
                </th>
                <th>
                    @comp.Marka
                </th>
                <th>
                    @comp.Stock
                </th>
                <th>
                    @comp.Salary
                </th>
            }
         
        </tr>
    </tbody>
 
</table>

<form>
    <button asp-action="Add" class="btn btn-primary"></button>
</form>

